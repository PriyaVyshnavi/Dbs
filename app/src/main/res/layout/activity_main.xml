<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/emailid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Enter user-id"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="147dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:text="Password"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="204dp" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:text="LOGIN"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="278dp" />

    <Button
        android:id="@+id/account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a new account"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="437dp" />

    <EditText
        android:id="@+id/forgot_psswrd"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Forgot username or password"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="390dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="36dp"
        android:layout_height="38dp"
        app:srcCompat="?android:attr/fingerprintAuthDrawable"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="352dp" />

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="333dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="61dp"
        android:layout_height="46dp"
        app:srcCompat="@drawable/dbslogo"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="35dp"
        android:layout_height="27dp"
        app:srcCompat="@drawable/passwrd"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="213dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="40dp"
        android:layout_height="33dp"
        android:visibility="visible"
        app:srcCompat="@drawable/User_login"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="147dp" />

    <TextView
        android:id="@+id/digibank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DigiBank"
        android:textSize="23sp"
        android:textColor="Black"
        tools:layout_editor_absoluteX="119dp"
        tools:layout_editor_absoluteY="26dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="by DBS"
        android:textColor="Black"
        tools:layout_editor_absoluteX="214dp"
        tools:layout_editor_absoluteY="35dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live more,Bank less"
        android:textColor="Black"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="65dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Banking"
        android:textColor="Blue"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="109dp" />

</android.support.constraint.ConstraintLayout>